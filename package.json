{
  "name": "code-quality-checks",
  "version": "1.0.1",
  "description": "Code quality definitions and Husky pre-commit hooks for Dude projects",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lint:styles": "stylelint \"**/*.scss\" --config .stylelintrc.json",
    "lint:styles:fix": "stylelint \"**/*.scss\" --config .stylelintrc.json --fix"
  },
  "devDependencies": {
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "code-quality",
    "pre-commit",
    "husky",
    "php",
    "wordpress",
    "stylelint",
    "phpcs"
  ],
  "author": "Dude",
  "license": "MIT"
}